<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_us_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/about_us_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorTestToolBar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/about_us_toolbar"
            android:background="@drawable/other_background"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:gravity="center"
            android:text="About us"
            android:textColor="#000000"
            android:id="@+id/about_us_header"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/about_us_header"
            >
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                card_view:cardBackgroundColor="#C3C3C3"
                card_view:cardCornerRadius="28dp"
                card_view:cardElevation="6dp"
                android:layout_margin="3dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Studio Member: "
                        android:layout_marginTop="15dp"
                        android:textColor="#FF8000"
                        android:textSize="25dp"
                        android:id="@+id/contact_1"
                        android:layout_marginBottom="6dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="趙威筑、賴政偉、張廷、邱宇勳、黃子弈"
                        android:textSize="17dp"
                        android:textColor="#FFFFFF"
                        android:layout_below="@id/contact_1"
                        android:id="@+id/contact_2"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="6dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textColor="#FF8000"
                        android:textSize="25dp"
                        android:text="Contact Email:"
                        android:id="@+id/contact_3"
                        android:layout_marginBottom="6dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B10317057@yuntech.edu.tw\nandrew33673367@gmail.com"
                        android:textSize="17dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="6dp"
                        android:id="@+id/contact_4"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textColor="#FF8000"
                        android:textSize="25dp"
                        android:text="Version:"
                        android:id="@+id/contact_5"
                        android:layout_marginBottom="6dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.0.0 (Beta)"
                        android:textSize="17dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="6dp"
                        android:id="@+id/contact_6"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\n\n\nThank You For Using!"
                        android:textSize="17dp"
                        android:gravity="center"
                        android:textColor="#FF9000"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\n\n\n© Andrew Studio"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/about_us_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer"/>
</android.support.v4.widget.DrawerLayout>