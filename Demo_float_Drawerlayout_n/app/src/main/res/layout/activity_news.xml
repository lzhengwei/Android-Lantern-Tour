<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/new_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorTestToolBar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_below="@+id/new_toolbar"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="燈會新聞"
                        android:gravity="center"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        />
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/channel_cardview_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        card_view:cardBackgroundColor="#C3C3C3"
                        card_view:cardCornerRadius="14dp"
                        card_view:cardElevation="8dp"
                        android:layout_margin="6dp"
                        android:background="#ffb114">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:background="#ffe747"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="80dp"
                                android:id="@+id/imageView"
                                android:src="@drawable/news" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="2017台灣燈會高鐵輸運雲林副縣長與議員會勘:"
                                android:textSize="22dp"
                                android:textColor="#090909" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/channel_cardview_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        card_view:cardBackgroundColor="#C3C3C3"
                        card_view:cardCornerRadius="14dp"
                        card_view:cardElevation="8dp"
                        android:layout_margin="6dp"
                        android:background="#ffb114">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:background="#ffe747"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="80dp"
                                android:id="@+id/imageView2"
                                android:src="@drawable/news2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="布袋戲元素加入，雲林縣主辦2017臺灣燈會:"
                                android:textSize="22dp"
                                android:textColor="#090909"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/channel_cardview_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        card_view:cardBackgroundColor="#C3C3C3"
                        card_view:cardCornerRadius="14dp"
                        card_view:cardElevation="8dp"
                        android:layout_margin="6dp"
                        android:background="#ffb114">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:background="#ffe747"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="80dp"
                                android:id="@+id/imageView3"
                                android:src="@drawable/news3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="2017台灣燈會主題「友善大地、燈會原鄉」:"
                                android:textSize="22dp"
                                android:textColor="#090909" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/channel_cardview_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        card_view:cardBackgroundColor="#C3C3C3"
                        card_view:cardCornerRadius="14dp"
                        card_view:cardElevation="8dp"
                        android:layout_margin="6dp"
                        android:background="#ffb114">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:background="#ffe747"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="80dp"
                                android:id="@+id/imageView5"
                                android:src="@drawable/news3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="雲林106年台灣燈會預計12條路線帶您玩:"
                                android:textSize="22dp"
                                android:textColor="#090909" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/channel_cardview_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        card_view:cardBackgroundColor="#C3C3C3"
                        card_view:cardCornerRadius="14dp"
                        card_view:cardElevation="8dp"
                        android:layout_margin="6dp"
                        android:background="#ffb114">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:background="#ffe747"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="80dp"
                                android:id="@+id/imageView4"
                                android:src="@drawable/news4" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="2017台灣燈會高鐵輸運雲林副縣長與議員會勘:"
                                android:textSize="22dp"
                                android:textColor="#090909" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/channel_cardview_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        card_view:cardBackgroundColor="#C3C3C3"
                        card_view:cardCornerRadius="14dp"
                        card_view:cardElevation="8dp"
                        android:layout_margin="6dp"
                        android:background="#ffb114">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:background="#ffe747"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="80dp"
                                android:id="@+id/imageView6"
                                android:src="@drawable/news3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="臺北國際食品展落幕，雲林物產成功行銷國際"
                                android:textSize="22dp"
                                android:textColor="#090909" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/channel_cardview_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        card_view:cardBackgroundColor="#C3C3C3"
                        card_view:cardCornerRadius="14dp"
                        card_view:cardElevation="8dp"
                        android:layout_margin="6dp"
                        android:background="#ffb114">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="3dp"
                            android:background="#ffe747"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="128dp"
                                android:layout_height="80dp"
                                android:id="@+id/imageView10"
                                android:src="@drawable/news3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="因應台灣燈會雲林消防局進行水上燈區災演:"
                                android:textSize="22dp"
                                android:textColor="#090909" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/new_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer"/>
</android.support.v4.widget.DrawerLayout>

